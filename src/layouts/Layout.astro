---
import '@fontsource/grey-qo';
import '@fontsource-variable/dancing-script';
import '@fontsource/pacifico';
import '@fontsource/sacramento';
import Title from '../components/Title.astro';
import Footer from '../components/section/footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Title> Boda Victor y Andrea</Title>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--primary-color: #F47D42 ;
		--secondary-color: #BDBDBD ;
		--accent-color: #F5F5F5 ;
		--dark-color: rgb(82, 82, 82);
	}
	html {
		font-family: 'Sacramento', cursive;
	}
	code {
		font-family:
			'Grey Qo', cursive;
	}
	@font-face {
		font-family: 'MiFuente'; /* Nombre de tu fuente */
		src: url('../fonts/GreyQo-Regular.ttf') format('ttf'),
			url('../fonts/GreyQo-Regular.ttf') format('ttf');
		font-weight: normal;
		font-style: normal;
	}
	body {
		background-color: var(--primary-color);
		margin: 0%;
		font-size: 3em;
		line-height: 2em; 
	}
	@media (max-width: 900px) {
		body {
			font-size: 1.5em; /* Aumentar el tamaño de fuente en pantallas más pequeñas */
		}
}
</style>
