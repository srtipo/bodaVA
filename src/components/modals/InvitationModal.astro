---
import Button from "../basics/button.astro";
import Modal from "../basics/modal.astro";
import SecundButton from "../basics/secundButton.astro";
---

<Modal id="invitation-modal">
    <h2>Welcome!</h2>
    <p>Por confirma tu asistencia</p>
    <p><strong>Invitados : </strong> 4</p>
    <form method="dialog">
        <input type="number" id="tentacles" name="tentacles" min="1" max="4" />
        <div class="buttons">
            <Button type="submit">aceptar</Button>
            <SecundButton >cerrar</SecundButton>
        </div>
        
    </form>
</Modal>

<style>
    input {
        width: 20%;
        height: 30px;
    }
    h2 {
        text-align: center;
        color: var(--primary-color);
        margin-block: 1%;
    }
    p {
        color: var(--dark-color);
        margin-block: 1%;
        line-height: 1.5em;
        margin-inline: 3%;
    }
    .buttons {
        display: flex;
        justify-content: space-between;
    }
</style>
