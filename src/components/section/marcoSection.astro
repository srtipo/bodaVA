---
import CircleMarco from "../marco/circleMarco.astro"
import Button from "../basics/button.astro";
import '@fontsource/grey-qo';
import '@fontsource-variable/dancing-script';
import '@fontsource/pacifico';
import '@fontsource/sacramento';
---
<div class = "container" style={{ background: 'var(--secondary-color)' }}>
    
    <div class =inside>
        <h3>  ¡Nos Casamos!</h3>
        <div class="CircleMarco">
            <CircleMarco />
        </div>
        <div class="button">
            <Button>Aceptar Invitación</Button>
        </div>
    </div>
    
</div>

<style>
    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2%;
    }
    h3 { 

        text-align: center;
        margin-bottom: 1%;
        color: var(--primary-color);
    }
    .inside {
        display: grid;
        align-items: center;
        width: 50%;
    }
    .CircleMarco {
        margin-inline: auto;
        padding: 0%;

    }
    .button {
        margin-inline: auto;
        margin-top: -60%;
    }
    .prueba-1 {
        font-family: 'sacramento', cursive;
        font-size: 2rem;
    }
    .prueba-2 {
        font-family: 'pacifico', cursive;
        font-size: 2rem;
    }
    .prueba-3 {
        font-family: 'Dancing Script Variable', cursive;
        font-size: 2rem;
    }
    .prueba-4 {
        font-family: 'Grey Qo', cursive;
        font-size: 3rem;
    }


</style>