---
import Button from "../basics/button.astro";
import CircleMarco from "../marco/circleMarco.astro";

---
<div class = "sectiontwo" >
    <div class ="left">
    </div>

    <div class ="center">
        <h3>  ¡Nos Casamos!</h3>
        <div class="CircleMarco">
            <CircleMarco />
        </div>
        <div class="button">
            <Button>Aceptar Invitación</Button>
        </div>
    </div>

    <div class ="right">
    </div>

</div>
<style>
    .sectiontwo {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        padding: 2%;
        background:var(--secondary-color);
        background: linear-gradient(180deg, var(--secondary-color) 40%,#c5b4ab 65% , rgba(244,125,66,1) 100%);
        height: auto
    }
    h3 { 

        text-align: center;
        margin-bottom: 1%;
        color: var(--primary-color);
    }
    .button {
        display: flex;
        justify-content: center;
        align-items: center;
        transform: translateY(-150%);
    }

</style>