---
import Button from "../basics/button.astro";
import CircleMarco from "../marco/circleMarco.astro";
import InvitationModal from "../modals/InvitationModal.astro";

interface Props {
    family: string;
    invitationMessage: string;
    people: any[];
}
const {family ,invitationMessage ,people} = Astro.props;
---
<script>
    document.getElementById("abrir-modal").addEventListener("click", function() {
      (document.getElementById("invitation-modal")as any).showModal();
      new CustomEvent('openModal');
    });
</script>
<div class = "sectiontwo" >
    <h2>¡Estan Invitad@s!</h2>
    <div class ="left">
        <h3>{family}</h3>
        <p>{invitationMessage}</p>
        </p>
        <div class="button">
            <Button id = "abrir-modal">Aceptar Invitación</Button>
        </div>
    </div>

    <div class ="right">
        <div class="CircleMarco">
            <CircleMarco />
        </div>
        
    </div>
    <InvitationModal  family={family}, people={people} >
        <form method="dialog">
          <button >Close</button>
        </form>
    </InvitationModal>

</div>
<style>
    .sectiontwo {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        padding-inline: 5%;
        padding-bottom: 20%;
        background:var(--secondary-color);
        background: linear-gradient(180deg, var(--secondary-color) 80%, rgba(244,125,66,1) 100%);
        height: auto;

    }
    h3 { 

        text-align: center;
        margin-block: 1%;
        color: var(--primary-color);
    }
    .button {
        display: grid;
        grid-column: 1 / 3;

    }
    .right {
        margin-inline: 3%;
        grid-column: 3 / 5;
        place-self: center;
        
    }
    .left {
        grid-column: 1 / 3;
        place-self: center;
        margin-block: 10%;
    }
    p {
        text-align: justify-all;
        color: var(--dark-color);
        margin-block: 1%;
        line-height: 1.5em;
        margin-inline: 3%;
    }
    h2 {
        grid-column: 1 / 5;
        text-align: center;
        margin-block: 1%;
        color: var(--primary-color);
    }

</style>